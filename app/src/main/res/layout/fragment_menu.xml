<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragmentBackground"
    tools:context=".ui.menu.FragmentMenu">


    <Button
        android:id="@+id/menu_tempText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/background_skip_login"
        android:gravity="center"
        android:text="Kya hai ee?"
        android:textSize="42sp" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/menu_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/menu_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:scrollbars="horizontal"
        app:tabMode="scrollable"
        app:tabTextColor="@color/white"
        tools:stateListAnimator="@color/primaryColor" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>